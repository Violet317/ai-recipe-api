{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "docker",
    "dockerfilePath": "./Dockerfile"
  },
  "deploy": {
    "restartPolicyType": "unless-stopped",
    "restartPolicyMaxRetries": 10
  },
  "env": {
    "VITE_API_BASE_URL": {
      "type": "secret",
      "default": "http://localhost:8000"
    }
  }
}
